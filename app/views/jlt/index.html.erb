<div class="grid-sis">
  <%= render 'layouts/profile_menu' %>
  <%= render 'layouts/nav' %>
  <%= render 'layouts/who_to_follow' %>
  <div class="main-body dis-none-options">
    <%= render 'layouts/main_options' %>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
    <%= render 'shared/new_opinion' %>
      <div class="posts-container">
        <% @jlt.each do |opinion| %>
          <section class="jlt-container">
            <%= profile_pic opinion.author %>
            <div class="jlt-text">
              <div class="jlt-name">
                <h6><%= link_to opinion.author.name, user_path(opinion.author) %></h6>
                <span><%= opinion.created_ago %></span>
              </div>
              <p><%= opinion.link_jlt %></p>
            </div>
          </section>
        <% end %>
        <%= will_paginate %>
      </div>
  </div>
</div>