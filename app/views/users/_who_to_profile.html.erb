<div class="who-to-follow">
  <div class="profile-info">
    <div class="pic-and-follow">
      <%= follow_or_stop @user %>
      <%= profile_pic @user %>
      <% unless current_user == @user %>
        <%= link_to users_path(params: { follow: 'followers', user: @user.username }), class: 'yes-follow' do %>
          <i class="fas fa-list-ul"><svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="list-ul" class="svg-inline--fa fa-list-ul fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M48 48a48 48 0 1 0 48 48 48 48 0 0 0-48-48zm0 160a48 48 0 1 0 48 48 48 48 0 0 0-48-48zm0 160a48 48 0 1 0 48 48 48 48 0 0 0-48-48zm448 16H176a16 16 0 0 0-16 16v32a16 16 0 0 0 16 16h320a16 16 0 0 0 16-16v-32a16 16 0 0 0-16-16zm0-320H176a16 16 0 0 0-16 16v32a16 16 0 0 0 16 16h320a16 16 0 0 0 16-16V80a16 16 0 0 0-16-16zm0 160H176a16 16 0 0 0-16 16v32a16 16 0 0 0 16 16h320a16 16 0 0 0 16-16v-32a16 16 0 0 0-16-16z"></path></svg></i>
        <% end %>
      <% end %>
    </div>
    <div class="profile-info-text">
      <span class='profile-name'><%= @user.name %></span>
      <span class='profile-username'><%= "jlt_#{@user.username}" %></span>
    </div>
    <div class="profile-user-info">
      <div class="user-info-jlts user-info">
        <h5><%= @user.num_jlts %></h5>
        <p>JLT's</p>
      </div>
      <div class="user-info-following user-info">
        <h5><%= @user.num_following %></h5>
        <p>Following</p>
      </div>
      <div class="user-info-followers user-info">
        <h5><%= @user.num_followers %></h5>
        <p>Followers</p>
      </div>
    </div>
  </div>
  <%= whotoprofile @user %>
</div>