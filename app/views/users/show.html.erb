<div class="grid-sis">
  <%= render 'layouts/nav' %>
  <%= render 'layouts/profile_menu' %>
  <%= render 'users/who_to_profile' %>
  <div class="main-body dis-none-option-video">
    <div class="cover-image-container" style="background-image: url(<%= @user.coverimage %>);"></div>
    <%= render 'layouts/main_options' %>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
    <%= foreign_view(@user) %>
    <div class="posts-container">
        <% @users.each do |opinion| %>
          <section class="jlt-container">
            <%= profile_pic opinion.author %>
            <div class="jlt-text">
              <div class="jlt-name">
                <h6><%= link_to opinion.author.name, me_path(opinion.author) %></h6>
                <span><%= opinion.created_ago %></span>
              </div>
              <p><%= opinion.link_jlt %></p>
            </div>
          </section>
        <% end %>
        <%= will_paginate %>
      </div>
  </div>
</div>